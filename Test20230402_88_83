package Test;

/**
 * 对象一对多关系
 * @author yangzixi
 *
 */
public class Test83_OneToMany {

	
	public static void main(String[] args) {
		Test83_Teacher t1 = new Test83_Teacher("张老师",38,"女");
		Test83_Student s1 = new Test83_Student("小李",10);
		Test83_Student s2 = new Test83_Student("小王",11);
		Test83_Student s3 = new Test83_Student("小杨",12);
		
		//关联关系
		t1.getStudents().add(s1);
		t1.getStudents().add(s2);
		t1.getStudents().add(s3);
		
		s1.setTeacher(t1);
		s2.setTeacher(t1);
		s3.setTeacher(t1);
		
		print(t1);
	}

	private static void print(Test83_Teacher t1) {
		System.out.println(t1.getName());
		for(Test83_Student s:t1.getStudents()) {
			System.out.println(s);
		}
	}

}
