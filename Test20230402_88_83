package Test;

public class Test83_Student {

	private int sid;
	public int getSid() {
		return sid;
	}
	public void setSid(int sid) {
		this.sid = sid;
	}
	private String name;
	private int age;
	private Test83_Teacher teacher;
	
	public Test83_Teacher getTeacher() {
		return teacher;
	}
	public void setTeacher(Test83_Teacher teacher) {
		this.teacher = teacher;
	}
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getAge() {
		return age;
	}
	public void setAge(int age) {
		this.age = age;
	}
	public Test83_Student(String name, int age) {
		super();
		this.name = name;
		this.age = age;
	}
	public Test83_Student() {
		super();
		// TODO Auto-generated constructor stub
	}
	@Override
	public String toString() {
		return "Test83_Student [name=" + name + ", age=" + age + "]";
	}
	
}
