import java .util.Scanner;
public class Test26{
	public static void main(String[] args){
		Scanner input = new Scanner(System.in);
		System.out.println("请输入一个数");
		int n = input.nextInt();
		int num = 0;//记录总和
		int i = 1;//属于第一阶乘
		do{
			int j = 1;
			int jc = 1;//求阶乘的和
			while(j<=i){
				jc *=j;
				j++;
			}
			num+=jc;
			i++;
		}while(i<=n);{
		System.out.println(num);
		}
		
	}
}
