package Test;

import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.RandomAccessFile;

/**
 * RandomAccessFile
 * @author yangzixi
 *
 */
public class Test66_RandomAccessFile {

	public static void main(String[] args) {
		
		try {
			//读取文件
			RandomAccessFile r = new RandomAccessFile("/Users/yang/vince.txt","r");
			//写入文件
			RandomAccessFile w = new RandomAccessFile("/Users/yangzixi/yang/vince.txt","rw");
			
			byte[] bytes = new byte[1024];
			int len = -1;
			while((len = r.read(bytes))!=-1) {
				w.write(bytes,0,len);
			}
			r.close();
			w.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		} catch (IOException e) {
			e.printStackTrace();
		}
		System.out.println("copy success");
	}

}

