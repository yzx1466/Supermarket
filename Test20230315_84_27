package Test;

public class Test27 {

	public static void main(String[] args) {
		Student4 s = new Student4("杨子熙",13,18);
		System.out.println(s.toString());//等同于System.out.println(s);
		Student4 s2 = new Student4("杨子熙",13,18);
		boolean b = s.equals(s2);
		System.out.println("Student4 equals："+b);
	}

}


class Student4{
	private String name;
	private int sid;
	private int age;
	public Student4(){}
	public Student4(String name,int sid,int age) {
		this.name = name;
		this.sid = sid;
		this.age = age;
	}
	//重写Object类中的toString方法
	public String toString() {
		return "name="+name+",sid="+sid+",age="+age;
	}
	
	//重写equals方法，来实现两对象的比较
	public boolean equals(Object obj) {
		if(this==obj) {
			return true;
		}
		if(obj instanceof Student4) {
			Student4 s = (Student4)obj;
			if(this.name!=s.name) {
				return false;
			}
			if(this.age!=s.age) {
				return false;
			}
			if(this.sid != s.sid) {
				return false;
			}
			return true;
		}
		return false;
	}
}

