import java.util.Scanner;
public class Test49{
    public static void main(String[] args) {
        Scanner reader=new Scanner(System.in);
        int n,sum=0,s=1;
        do{
            System.out.println("请输入一个整数");
         n=reader.nextInt();}
        while(n<=0);

       for(int i=n;i>1;i--){
           s=s*i;
           sum=sum+s;
       }
        System.out.println(sum);
    }
}
