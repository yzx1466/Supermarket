//另外一题：
public class Test78{
	public static void main(String[] args){
		Test78 t =new Test78();
		t.tower(3,1);
		t.tower(5,0);
	}
	public void tower(int line,int type){
		int i,j;
		if(type ==1){
			for(i = 1;i<=line;i++){
				for(j = 0;j<line-i;j++){
					System.out.print(" ");
				}
				for(j = i;j>1;j--){
					System.out.print(j);
				}
				for(j = 1;j<=i;j++){
					System.out.print(j);
				}
				System.out.println();
			}
		}else{
			if(type == 0){
				for(i = 1;i<=line;i++){
				for(j = 0;j<line-i;j++){
					System.out.print(" ");
				}
				for(j = i;j>1;j--){
					System.out.print((char)(j+64));
				}
				for(j = 1;j<=i;j++){
					System.out.print((char)(j+64));
				}
				System.out.println();
			}
			}else{
				System.out.println("wrong type!");
			}
		}
	}
}
