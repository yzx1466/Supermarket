package Test;

import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.io.Reader;
import java.io.Writer;
import java.nio.charset.Charset;

/**
 * 转换流：
 * OutputStreamWriter：可以将输出的字符流转换成字节流的输出形式
 * InputStreamReader：将输入的字节流转换成字符流的输入形式
 * @author yangzixi
 * @description
 */
public class Test57_ChangeStream {
	private static void write(OutputStream out) {
		Writer writer = new OutputStreamWriter(out,Charset.defaultCharset());
		try {
			writer.write("小桥流水人家");
			writer.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	private static void read(InputStream in) {
		Reader reader = new InputStreamReader(in,Charset.defaultCharset());//.defaultCharset()默认编码
		char[] cs = new char[1024];
		int len = -1;
		try {
			while((len = reader.read(cs))!=-1) {
				System.out.println(new String(cs,0,len));
			}
			reader.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}
	
	public static void main(String[] args) throws FileNotFoundException {
		InputStream in = new FileInputStream("/Users/yangzixi/yang/vince.txt");
		read(in);
		OutputStream out = new FileOutputStream("/Users/yangzixi/yang/vince.txt");
		write(out);
	}
}

