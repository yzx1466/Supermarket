package Test;

import java.util.Arrays;

public class Test39_StringDemo2 {

	public static void main(String[] args) {
		//String类字符与字符串操作方法：
		String str = "rdyhfawfgwwf3245";
		char c = str.charAt(1);
		System.out.println(c);
		System.out.println(str.toCharArray());
		
		char[] cs = {'a','b','c'};
		String s1 = new String(cs);
		String s2 = new String(cs,0,1);
		System.out.println(s1);
		System.out.println(s2);
		System.out.println(str.valueOf(cs, 1,1));
		
		//String类字节与字符串操作方法：
		System.out.println(Arrays.toString(str.getBytes()));
		
		//String类替换操作：
		System.out.println(str.replace('w','*'));
		System.out.println(str.replaceAll("\\d", "*"));
		
		//String类字符串截取操作：
		System.out.println(str.substring(0,4));
		
		//String类字符串拆分操作：
		System.out.println(Arrays.toString(str.split("f")));
		
		//String类字符串查找操作：
		System.out.println(str.contains("a"));
		System.out.println(str.indexOf("f"));
		System.out.println(str.lastIndexOf("f"));
		
		//String类其他操作方法:
		System.out.println(str.isEmpty());
		System.out.println(str.length());//数组是属性，str是对象，对象是方法
		System.out.println(str.trim());
		System.out.println(str.concat("*********"));
		
	}

}
;